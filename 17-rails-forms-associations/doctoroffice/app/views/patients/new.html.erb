<div class="container" style="padding-top: 30px;">
    <h1 class="display-3" style="padding-top: 30px;">New Patient Form</h1>
    <br/>
</div>

<div class="container" style="padding-top: 30px;">
    <%= form_for @patient do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :condition %>
    <%= f.text_field :condition %>

    <%= f.collection_select :doctor_id, Doctor.all, :id, :name %>

    <%= f.submit %>
    <% end %>
</div>